{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "https://github.com/konflux-ci/mintmaker/blob/main/config/renovate/renovate.json?raw=true"
  ],
  "assigneesFromCodeOwners": true,
  "automergeStrategy": "auto",
  "automergeType": "pr",
  "baseBranches": [
    "main",
    "next"
  ],
  "commitMessagePrefix": "NO-JIRA: ",
  "ignoreTests": false,
  "rebaseLabel": "needs-rebase",
  "rebaseWhen": "behind-base-branch",
  "recreateWhen": "always",
  "schedule": "0 6,15 * * 1-5",
  "timezone": "America/New_York",
  "tekton": {
    "enabled": true,
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch",
          "pin",
          "digest"
        ],
        "automerge": true,
        "addLabels": [
          "lgtm",
          "approved"
        ]
      }
    ]
  },
  "dockerfile": {
    "enabled": true,
    "packageRules": [
      {
        "matchFileNames": [
          "Dockerfile.*",
          "*.Dockerfile"
        ],
        "automerge": true,
        "addLabels": [
          "lgtm",
          "approved"
        ]
      }
    ]
  },
  "gomod": {
    "enabled": false
  }
}
